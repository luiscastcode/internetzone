---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SEO } from "../utils/AppConfig";

const defaultProps = {
  structuredData: SEO.structuredData,
};

interface Props {
  metatitle: string;
  metadescrip: string;
  slug: string;
  structuredData: object;
}

const {
  metatitle,
  metadescrip,
  slug,
  structuredData = defaultProps.structuredData,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    {
      structuredData && (
        <script
          is:inline
          type="application/ld+json"
          set:html={JSON.stringify(structuredData)}
        />
      )
    }

    <meta charset="UTF-8" />
    <title>{metatitle}</title>
    <meta name="description" content={metadescrip} />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="takeads-platform-verification"
      content="8fabb9f0-6aa1-425d-a65f-c9c95d3354f6"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
    <link
      href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/assets/estilos/app.css" />
    <link rel="canonical" href={`https://internetzone.vercel.app/${slug}`} />
    <meta
      name="keywords"
      content="fibra optica, proveedores de fibra optica, velocidad de internet, routers, wifi"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="robots" content="all" />
    <meta name="google-adsense-account" content="ca-pub-1207813510935304" />
    <!-- Twitter -->
    <meta property="twitter:title" content={metatitle} />
    <meta property="twitter:description" content={metadescrip} />
    <meta
      property="twitter:image"
      content="https://internetzone.vercel.app/assets/img/logo2.jpg"
    />
    <meta
      property="twitter:url"
      content={`https://internetzone.vercel.app/${slug}`}
    />
    <meta property="twitter:card" content="summary_large_image" />

    <!-- Facebook -->
    <meta property="og:title" content={metatitle} />
    <meta property="og:description" content={metadescrip} />
    <meta
      property="og:url"
      content={`https://internetzone.vercel.app/${slug}`}
    />
    <meta
      property="og:image"
      content="https://internetzone.vercel.app/assets/img/logo2.jpg"
    />
    <meta property="og:type" content="website" />

    <script
      is:inline
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-1SR28WJ37F"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-1SR28WJ37F");
    </script>
  </head>
  <body class="flex flex-col justify-center mx-auto bg-slate-200">
    <script is:inline>
      window.fbAsyncInit = function () {
        FB.init({
          appId: "1142124556319243",
          xfbml: true,
          version: "v20.0",
        });
        FB.AppEvents.logPageView();
      };

      (function (d, s, id) {
        var js,
          fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) {
          return;
        }
        js = d.createElement(s);
        js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
      })(document, "script", "facebook-jssdk");
    </script>
    <Header />
    <slot />
    <Footer />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"
    ></script>
  </body>
</html>
