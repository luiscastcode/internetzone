---
interface Props {
  title: string;
  body: string;
  href: string;
  rel:string;
  target:string;
}

const { href, title, body, rel, target } = Astro.props;
---

<a
  href={href}
  rel={rel}
  target={target}
  class="block p-6 bg-white border border-gray-400 rounded-lg shadow hover:bg-gray-100"
>
  <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
    {title}
    <span>&rarr;</span>
  </h5>
  <p class="font-normal text-gray-700">
    {body}
  </p>
</a>
