---
interface Props {
  text: string;
  href: string;
  rel:string;
  target:string;
}
const { href, text, rel,target} = Astro.props;
---

<div class="flex flex-row justify-center items-center mx-auto">
  <a
    href={href}
    rel={rel}
    target={target}
    class="text-white w-full bg-[#2557D6] hover:bg-[#2557D6]/90 focus:ring-4 focus:ring-[#2557D6]/50 focus:outline-none font-bold text-lg px-5 py-2.5 justify-center inline-flex items-center me-2 mb-2"
  >
    {text}
  </a>
</div>
