---
import Section from "./Section.astro";
import TablaContenido from "../components/TablaContenido.astro";

interface Props {
  img: {
    src: string;
    alt: string;
  };
  headings: string;
}

const { img, headings } = Astro.props;
---

<div class="post px-2 md:px-20 my-4">
  <div class="grid grid-col md:grid-cols-2 gap-1 justify-center items-center my-4">
    <div id="accordion-collapse" data-accordion="collapse">
      <h2 id="accordion-collapse-heading-1">
        <button
          type="button"
          class="flex items-center justify-between w-full p-5 font-medium rtl:text-right border border-b-0 border-gray-200 rounded-t-xl focus:ring-4 focus:ring-gray-200 gap-3"
          data-accordion-target="#accordion-collapse-body-1"
          aria-expanded="false"
          aria-controls="accordion-collapse-body-1"
        >
          <span>Tabla de contenido</span>
          <svg
            data-accordion-icon
            class="w-3 h-3 rotate-180 shrink-0"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 10 6"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5 5 1 1 5"></path>
          </svg>
        </button>
      </h2>
      <div
        id="accordion-collapse-body-1"
        class="hidden"
        aria-labelledby="accordion-collapse-heading-1"
      >
        <TablaContenido headings={headings} />
      </div>
    </div>

    <div>
      {
        img.src ? (
          <img src={img.src} alt={img.alt} class="w-full rounded-lg" />
        ) : null
      }
    </div>
  </div>

  <slot />
</div>
