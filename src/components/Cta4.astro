---
interface Props {
  titulocta4: string;
  urlbotoncta: string;
  descripcta: string;
  nomboton: string;
}

const { titulocta4, descripcta, urlbotoncta, nomboton } = Astro.props;
---

<div
  class="flex flex-col md:flex-row justify-center items-center gap-2 my-4 border-2 shadow-md rounded-md border-gray-900 bg-no-repeat bg-[url('/assets/img/soporte.jpg')] bg-cover bg-center"
>
  
    <img
      class="object-cover w-full rounded-t-lg h-full md:max-w-[320px] md:rounded-none md:rounded-s-lg"
      width="250"
       
      src="/assets/img/logo2.jpg"
      alt="Empresa Fibra Optica Airtek"
    />
  
  <div class="flex flex-col justify-center text-slate-100 p-6">
    <h3 class="text-justify mb-4 text-slate-100 md:text-4xl">
      {titulocta4}
    </h3>
    <p class="text-justify mb-4 ">
      {descripcta}
    </p>
    <a
      href={`/${urlbotoncta}/`}
      class="w-full text-gray-900 bg-[#F7BE38] hover:bg-[#F7BE38]/90 justify-center focus:ring-4 focus:ring-[#2557D6]/50 focus:outline-none font-medium rounded-lg text-lg px-5 py-2.5 text-center inline-flex items-center dark:focus:ring-[#2557D6]/50 me-2 mb-2"
    >
      {nomboton}
    </a>
  </div>
</div>
