---
const { nombreamazon, fotoamazon, urlamazon, acax } = Astro.props;
---

<div class="rounded-lg border border-gray-600 bg-white p-2 shadow-sm">
  <div class="h-auto w-full mb-3">
    <img
      class="h-auto w-full rounded-lg mx-auto"
      src={`/assets/img/amazon/${fotoamazon}`}
      alt={nombreamazon}
    />
  </div>
  <div class="mb-3">
    <span class="text-indigo-600 font-bold text-xl">{acax}</span>
  </div>
  <a
    href="#"
    class="text-xl md:text-lg font-semibold leading-tight text-amber-900"
    >{nombreamazon}</a
  >

  <div class="mt-4 flex items-center justify-center gap-4">
    <a
      href={`${urlamazon}`}
      target="_blank"
      rel="nofollow"
      class="text-gray-900 bg-[#F7BE38] hover:bg-[#F7BE38]/90 focus:ring-4 focus:outline-none focus:ring-[#F7BE38]/50 font-bold px-8 md:px-5 py-4 md:py-2.5 text-xl md:text-lg text-center inline-flex items-center dark:focus:ring-[#F7BE38]/50 me-2 mb-2"
    >
      <svg
        class="-ms-2 me-2 h-5 w-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 4h1.5L8 16m0 0h8m-8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm8 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4Zm.75-3H7.5M11 7H6.312M17 4v6m-3-3h6"
        ></path>
      </svg>
      Ver En Amazon
    </a>
  </div>
</div>
