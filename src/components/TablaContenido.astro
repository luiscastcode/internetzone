---
import TablaContenidoEncabezado from './TablaContenidoEncabezado.astro'
// TableOfContents.astro
const { headings } = Astro.props;
const toc = buildToc(headings);

function buildToc(headings) {
  const toc = [];
  const parentHeadings = new Map();
  headings.forEach((h) => {
    const heading = { ...h, subheadings: [] };
    parentHeadings.set(heading.depth, heading);
    // Change 2 to 1 if your markdown includes your <h1>
    if (heading.depth === 2) {
      toc.push(heading);
    } else {
      parentHeadings.get(heading.depth - 1).subheadings.push(heading);
    }
  });
  return toc;
}

---
<section class="flex justify-center">
  <nav class="toc container max-w-sm p-1 shadow-md rounded-md border-2 border-indigo-500">
    <ul>
      {toc.map((heading) => <TablaContenidoEncabezado heading={heading} />)}
    </ul>
  </nav>
</section>
