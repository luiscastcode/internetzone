---
const posts = [
  { nomprov: "valencia", slug: "valencia", numero: "1" },
  { nomprov: "caracas", slug: "caracas", numero: "2" },
  { nomprov: "maracaibo", slug: "maracaibo", numero: "3" },
  { nomprov: "maracay", slug: "maracay", numero: "4" },
  { nomprov: "san cristobal", slug: "san-cristobal", numero: "5" },
  { nomprov: "barquisimeto", slug: "barquisimeto", numero: "6" },
  { nomprov: "san fernando", slug: "san-fernando-de-apure", numero: "7" },
];
---

<div class="flex flex-col mb-4 bg-slate-100 rounded-md shadow-md p-4">
  <h4 class="my-2 text-left">Proveedores de Internet En Tu Ciudad</h4>
  {
    posts.map((post) => (
      <div class="mb-2">
        <a href={`/internet-en/${post.slug}/`} class="text-sm mb-1">
          
          <span class="capitalize ml-1 font-bold text-blue-400 hover:text-blue-600">
            proveedores de Internet en {post.nomprov}
          </span>
        </a>
      </div>
    ))
  }
</div>
