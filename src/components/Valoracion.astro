---
interface Props {
  valorgeneral: string;
  valoracion: string;
  porcentajecobertura: string;
  puntoscobertura: string;
  porcentajevelocidad: string;
  puntosvelocidad: string;
  porcentajeplanes: string;
  puntosplanes: string;
  porcentajeatc: string;
  puntosatc: string;
}

const {
  valorgeneral,
  valoracion,
  porcentajecobertura,
  puntoscobertura,
  porcentajevelocidad,
  puntosvelocidad,
  porcentajeplanes,
  puntosplanes,
  porcentajeatc,
  puntosatc,
} = Astro.props;
---

<div class="flex items-center mb-5">
  <p
    class="bg-blue-100 text-blue-800 text-sm font-semibold inline-flex items-center p-1.5 rounded dark:bg-blue-200 dark:text-blue-800"
  >
    {valorgeneral}
  </p>
  <p class="ms-2 font-medium text-gray-900">{valoracion}</p>
</div>
<div class="gap-8 sm:grid sm:grid-cols-2">
  <div>
    <dl>
      <dt class="text-sm font-medium text-gray-900">Cobertura</dt>
      <dd class="flex items-center mb-3">
        <div class="w-full bg-gray-200 rounded h-2.5 dark:bg-gray-700 me-2">
          <div
            class="bg-blue-600 h-2.5 rounded dark:bg-blue-500"
            style={`width: ${porcentajecobertura}`}
          >
          </div>
        </div>
        <span class="text-sm font-medium text-gray-900">{puntoscobertura}</span>
      </dd>
    </dl>
    <dl>
      <dt class="text-sm font-medium text-gray-900">Velocidad</dt>
      <dd class="flex items-center mb-3">
        <div class="w-full bg-gray-200 rounded h-2.5 dark:bg-gray-700 me-2">
          <div
            class="bg-blue-600 h-2.5 rounded dark:bg-blue-500"
            style={`width: ${porcentajevelocidad}`}
          >
          </div>
        </div>
        <span class="text-sm font-medium text-gray-900">{puntosvelocidad}</span>
      </dd>
    </dl>
  </div>
  <div>
    <dl>
      <dt class="text-sm font-medium text-gray-900">Planes y precios</dt>
      <dd class="flex items-center mb-3">
        <div class="w-full bg-gray-200 rounded h-2.5 dark:bg-gray-700 me-2">
          <div
            class="bg-blue-600 h-2.5 rounded dark:bg-blue-500"
            style={`width: ${porcentajeplanes}`}
          >
          </div>
        </div>
        <span class="text-sm font-medium text-gray-900">{puntosplanes}</span>
      </dd>
    </dl>
    <dl>
      <dt class="text-sm font-medium text-gray-900">Atenci√≥n al cliente</dt>
      <dd class="flex items-center mb-3">
        <div class="w-full bg-gray-200 rounded h-2.5 dark:bg-gray-700 me-2">
          <div
            class="bg-blue-600 h-2.5 rounded dark:bg-blue-500"
            style={`width: ${porcentajeatc}`}
          >
          </div>
        </div>
        <span class="text-sm font-medium text-gray-900">{puntosatc}</span>
      </dd>
    </dl>
  </div>
</div>
